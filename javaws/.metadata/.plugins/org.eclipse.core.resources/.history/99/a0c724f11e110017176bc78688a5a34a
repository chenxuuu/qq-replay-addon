package com.sweetcreeper.qqplugin;
import org.bukkit.command.Command;
import org.bukkit.command.CommandSender;
import org.bukkit.entity.Player;
import org.bukkit.plugin.java.JavaPlugin;

public class Qqplugin extends JavaPlugin
{
	@Override//重写父类的方法
	public void onEnable()
	{
		getLogger().info("QQGroupMessagePlugin is started successfully!");
	}
	@Override
	public void onDisable()
	{
		getLogger().info("QQGroupMessagePlugin is stoped successfully!");
	}
	
	public boolean onCommand(CommandSender sender, Command cmd, String label, String[] args) 
	{
		if(label.equalsIgnoreCase("test")){
			if(sender instanceof Player){
				Player player = (Player)sender;
				//玩家执行的命令
				if(args.length==0){
					//没有任何参数的时候执行   
					player.sendMessage("你执行了Test命令");
				}else if(args.length==1){
					if(args[0].equalsIgnoreCase("HelloWorld")){//不区分大小写
						player.sendMessage("你执行了HelloWorld命令");
					}
					//当存在一个参数的时候执行 例如  /op balrogs_xt
				}
			}else{
				//控制台执行的命令
			}
		}
        return false;
	}
}
